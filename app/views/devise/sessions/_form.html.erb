<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, :class => "input-large", :required => false, :autofocus => true, :placeholder => "E-mail" %>
    <%= f.password_field :password, :class => "input-large", :required => false, :placeholder => "Password" %>
  </div>

  <div class="actions">
    <%= f.button :submit, "Login", class: "btn btn-success" %>
  </div>

  <div>
  	<%= link_to "Forgot your password?", new_password_path('user') %>
  </div>
<% end %>
