<table class="table table-hover">
  <tr>
    <td><strong><%= link_to question.title, question %></strong> Asked by <%= question.user.name %></td>
  </tr>
  <tr>
    <td><%= question.details %></td>
  </tr>
  <% question.answers.each do |answer| %>
    <tr>
      <td><li><%= answer.answer %></li></td>
    </tr>
  <% end %>
  </tr>
  <%= link_to "Vote Up", current_user.up_vote(question) %>
</table>