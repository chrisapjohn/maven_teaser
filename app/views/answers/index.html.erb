<table>
  <tr>
    <td><strong><%= @question.title %></strong></td>
  </tr>
  <tr>
    <td><%= @question.details %></td>
  </tr>
</table>

<table>
  <% @answers.each do |answer| %>
    <tr>
      <td><%= answer.answer %></td>
      <td><%= answer.score %></td>
      <td><%= link_to 'Show', question_answer_path(@question, answer) %></td>
      <td><%= link_to 'Edit', edit_question_answer_path(@question, answer) %></td>
      <td><%= link_to 'Destroy', [@question, answer], method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<br />

<%= link_to 'New Answer', new_question_answer_path %>
